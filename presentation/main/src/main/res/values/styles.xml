<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">23.5sp</item>
        <item name="android:textColor">#007891</item>
        <item name="android:fontFamily">@font/whitneyssm_semibold_adv</item>
    </style>

    <style name="RegularText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15.8sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">12.2sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:fontFamily">@font/whitneyssm_medium_adv</item>
    </style>

    <!--Rounded Buttons-->

    <style name="Test.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/whitneyssm_semibold_adv</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2.3sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Test.Button.Colored" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/whitneyssm_semibold_adv</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:lineSpacingExtra">2.3sp</item>
    </style>

    <style name="Test.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="titleTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="subtitleTextColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="Test.Toolbar.Light" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="subtitleTextColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Test.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="subtitleTextColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="OnBoardingTitleText">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- List row styles -->
    <style name="ListRowPrimary">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListRowSecondary">
        <item name="android:textColor">@color/grey</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextInputErrorText">
        <item name="android:textColor">@color/scarlet</item>
        <item name="android:textSize">11.7sp</item>
    </style>

    <style name="TextInputInfoText">
        <item name="android:textColor">@color/black_60</item>
        <item name="android:textSize">11.7sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

</resources>
