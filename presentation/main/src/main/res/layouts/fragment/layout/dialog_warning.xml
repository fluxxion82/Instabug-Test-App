<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="24dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iconWarning"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/whitneyssm_semibold_adv"
            android:letterSpacing="0.01"
            android:textColor="@color/dialog_title"
            android:textSize="19.6sp"
            app:layout_constraintTop_toBottomOf="@id/iconWarning"
            tools:text="Warning title" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/whitneyssm_medium_adv"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8.2sp"
            android:textColor="@color/dialog_message"
            android:textSize="15.8sp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            tools:text="Warning message" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
