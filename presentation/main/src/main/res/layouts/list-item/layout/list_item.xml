<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/shadow_adjusted_edge_size"
    android:paddingEnd="@dimen/global_edge_size">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_centerVertical="true"
        android:background="@color/ocean"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_text_container_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/primary"
            style="@style/ListRowPrimary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Test Primary"/>

        <TextView
            android:id="@+id/secondary"
            style="@style/ListRowSecondary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:layout_weight="1"
            tools:text="Test Secondary"/>
    </LinearLayout>
</RelativeLayout>
